                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="contentPresenter" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95" x:Name="MenuList"/>
            <ColumnDefinition Width="*" x:Name="RightRegion"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.RowSpan="2" Opacity="0.8" Background="Snow">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Custom_Controls:RoundProfileButton  Width="50" ProfileImageSource="/assets/profile1.jpg" />
            <Custom_Controls:MenuListControl Grid.Row="1" Margin="0,30,0,0" x:Name="Menu" ListBoxSelectedIndex="Menu_ListBoxSelectedIndex"/>
        </Grid>

        <Screens:ScreenFriend x:Name="Friend" Grid.Column="1" Visibility="Collapsed"/>
        <Screens:ScreenChat x:Name="Chat" Grid.Column="1" Visibility="Collapsed"/>
        <Screens:ScreenSettings x:Name="Settings" Grid.Column="1" Visibility="Collapsed" />



        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal" Margin="0 5 10 0">
            <Button x:Name="CompressButton" Background="Transparent" BorderBrush="Transparent"
                    Width="30" Height="30" Margin="0 0 5 0" Style="{DynamicResource SystemButtonStyle}" Click="CompressButton_Click">
